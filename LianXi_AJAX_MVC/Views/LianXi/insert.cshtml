
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>insert</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <table cellpadding="0" cellspacing="0">
            <tr><td>姓名：<input name="name" id="name" type="text" class="text-info"/></td></tr>
            <tr><td>年龄：<input name="age" id="age" type="text" /></td></tr>
        </table>
        <input id="Submit1" type="button" value="新增"  onclick="Add(this)" />
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    //窗体加载
    $(function() {

    });
    //新增
    function Add() {
        $.ajax({
            type: "POST",
            url: "/LianXi/aaAdd",
            dataType: "json",
            contentType: "application/json",
            data: "{a:{name:'" + $("#name").val() + "',age:'" + $("#age").val()+"'}}",
            success: function (result) {
                if (result > 0) {
                    alert("新增成功！");
                    location.href = '/LianXi/Index';
                } else {
                    alert("新增失败！");
                }
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);
            }
        });
    }
</script>