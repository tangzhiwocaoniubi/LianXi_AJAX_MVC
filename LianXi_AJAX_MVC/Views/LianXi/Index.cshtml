<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    //窗体加载事件
    $(function () {
        GetaaAll();
    });
    //转换Data类型
    //function GetTime(op) {
    //    var time = new Date(parseInt(op.substr(6)));
    //    return time.toLocaleString();
    //}
    //AA表查询全部信息
    function GetaaAll() {
        $.ajax({
            type: "POST",
            url: "/LianXi/GetaaAll",
            dataType: "json",
            contentType: "application/json",
            data:"{}",
            success: function (result) {
                $.each(result, function (index, data) {
                    $("#tb1").append("<tr><td>" + data.id + "</td><td>" + data.name + "</td><td>" + data.age + "</td></td><td><a href='#' onclick='return Del("+data.id+")'>删除</a><a href='/LianXi/update?id="+data.id+"'>修改</a></td></tr>");
                });
            },
            error: function (ex) {
                alert("Error:" + ex.responseText);
            }
        });
    }
    //删除
    function Del(id) {
        if (confirm('确定删除?')) {
            $.ajax({
                type: "POST",
                url: "/LianXi/Del",
                data: "{id:" + id + "}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("删除成功！");
                        location.href = '/LianXi/Index';
                    }
                    else {
                        alert("删除失败！");
                    }
                },
                error: function (ex) {
                    alert(ex.responseText);
                }
            });
        }
        return false;
    }
</script>

